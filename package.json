{
	"name": "nike-release-checker",
	"description": "Simple terminal Nike stock checker (50+ countries)",
	"version": "1.0.0",
	"type": "module",
	"private": true,
	"imports": {
		"#snkrs-sdk": "./snkrs-sdk/index.ts",
		"#snkrs-sdk/mocks": "./snkrs-sdk/mocks/node.ts"
	},
	"scripts": {
		"start": "tsx --experimental-webstorage --localstorage-file=local.db --no-warnings src/index.tsx",
		"start:debug": "tsx --inspect-brk --experimental-webstorage --localstorage-file=local.db --no-warnings src/devEntry.ts",
		"start:watch": "tsx --watch-path=./src --experimental-webstorage --localstorage-file=local.db --no-warnings src/devEntry.ts",
		"build": "rspack build",
		"test": "node --experimental-webstorage --localstorage-file=test.db --no-warnings --test",
		"format": "npm run format:prettier",
		"format:prettier": "npm run lint:prettier -- --write",
		"lint": "npm run lint:prettier && npm run lint:ts",
		"lint:prettier": "prettier \"**/*.{json,[jt]s,[jt]sx,[cm][jt]s}\" --check",
		"lint:ts": "tsc --noEmit"
	},
	"keywords": [
		"api",
		"snkrs",
		"terminal",
		"stock",
		"nike"
	],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@nanostores/persistent": "1.2.0",
		"@nanostores/react": "1.0.0",
		"@nanostores/router": "1.0.0",
		"chalk": "5.6.2",
		"figures": "6.1.0",
		"ink": "6.5.1",
		"ink-select-input": "6.2.0",
		"ink-spinner": "5.0.0",
		"jimp": "1.6.0",
		"nanostores": "1.1.0",
		"radash": "12.1.1",
		"react": "19.2.1",
		"terminal-image": "4.1.0"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "4.7.0",
		"@rspack/cli": "^1.6.6",
		"@rspack/core": "^1.6.6",
		"@types/node": "24.10.1",
		"@types/react": "19.2.7",
		"msw": "2.12.4",
		"prettier": "3.7.4",
		"tsx": "4.21.0",
		"typescript": "5.9.3"
	},
	"engines": {
		"node": ">=24"
	}
}
