{
	"name": "nike-release-checker",
	"description": "Simple terminal Nike stock checker (50+ countries)",
	"version": "1.0.0",
	"type": "module",
	"private": true,
	"imports": {
		"#snkrs-sdk": "./snkrs-sdk/index.ts",
		"#snkrs-sdk/mocks": "./snkrs-sdk/mocks/node.ts"
	},
	"scripts": {
		"start": "tsx --experimental-webstorage --localstorage-file=local.db --no-warnings src/index.tsx",
		"start:debug": "cross-env LOG_LEVEL=debug tsx --experimental-webstorage --localstorage-file=local.db --no-warnings src/index.tsx",
		"start:remote-debug": "cross-env LOG_LEVEL=debug tsx --inspect-brk --experimental-webstorage --localstorage-file=local.db --no-warnings src/devEntry.ts",
		"start:watch": "tsx --watch-path=./src --experimental-webstorage --localstorage-file=local.db --no-warnings src/devEntry.ts",
		"build": "rspack build",
		"build:sea": "bash ./scripts/pack-sea.sh",
		"build:check": "node --experimental-webstorage --localstorage-file=local.db dist/bundle.cjs",
		"vercel:build": "node -v",
		"test": "node --experimental-webstorage --localstorage-file=test.db --no-warnings --test",
		"format": "npm run format:prettier",
		"format:prettier": "npm run lint:prettier -- --write",
		"lint": "npm run lint:prettier && npm run lint:ts",
		"lint:prettier": "prettier \"**/*.{json,[jt]s,[jt]sx,[cm][jt]s}\" --check",
		"lint:ts": "tsc --noEmit",
		"ci:check-product-feed": "tsx snkrs-sdk/ci-check-product-feed.ts"
	},
	"keywords": [
		"api",
		"snkrs",
		"terminal",
		"stock",
		"nike"
	],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@nanostores/persistent": "1.2.0",
		"@nanostores/react": "1.0.0",
		"@nanostores/router": "1.0.0",
		"figures": "6.1.0",
		"ink": "6.5.1",
		"ink-select-input": "6.1.0",
		"ink-spinner": "5.0.0",
		"nanostores": "1.1.0",
		"pretty-bytes": "7.1.0",
		"react": "19.2.1",
		"terminal-image": "4.1.0",
		"valibot": "1.2.0",
		"winston": "3.19.0",
		"winston-daily-rotate-file": "5.0.0"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "4.7.0",
		"@rspack/cli": "^1.6.6",
		"@rspack/core": "^1.6.6",
		"@types/node": "24.10.1",
		"@types/react": "19.2.7",
		"@vercel/node": "5.5.15",
		"cross-env": "10.1.0",
		"msw": "2.12.4",
		"postject": "1.0.0-alpha.6",
		"prettier": "3.7.4",
		"tsx": "4.21.0",
		"typescript": "5.9.3"
	},
	"engines": {
		"node": "24.x"
	}
}
